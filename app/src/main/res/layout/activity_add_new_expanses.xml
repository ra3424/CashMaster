<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_expanses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.rahul.indrakant.cashmaster.add_new_expanses">

    <ScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlogo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:textColor="#3462D6"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/NE_textView1"
        android:textSize="@dimen/font"
        android:text="Item Name"
        />

    <EditText
        android:maxLines="1"
        android:textColorHint="#f62b53d7"
        android:layout_below="@id/NE_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NE_editText1"
        android:hint="Money Spent On"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:singleLine="true"
        />
    <TextView
        android:textColor="#3462D6"
        android:layout_below="@id/NE_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NE_textView2"
        android:textStyle="bold"
        android:textSize="@dimen/font"
        android:text="Price"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <EditText
        android:textColorHint="#f62b53d7"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NE_editText2"
        android:inputType="numberDecimal"
        android:hint="How much it Cost?"
        android:layout_below="@id/NE_textView2"
        />

    <TextView
        android:textColor="#3462D6"
        android:layout_below="@id/NE_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NE_textView3"
        android:textSize="@dimen/font"
        android:textStyle="bold"
        android:text="Category:"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <Spinner

        android:layout_below="@+id/NE_textView3"
        android:id="@+id/NE_dropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"

        />


    <TextView
        android:textColor="#3462D6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_below="@+id/NE_dropDown"
        android:textSize="@dimen/font"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/NE_date"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:textColor="#3462D6"
        android:editable="false"
        android:textSize="@dimen/font"
        android:layout_width="wrap_content"
        android:text="              "
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/NE_date"
        android:id="@+id/NE_datePicker"
        android:layout_below="@id/NE_dropDown"
        android:focusable="false"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/roundbutton1"
        android:id="@+id/NE_button"
        android:layout_marginLeft="120dp"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/NE_datePicker"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
